/** 搜索栏目 **/
QUERY SearchPostSubject(    
    _post ID POST
)
returns ret (
    subject ID Subject ,
    name char(100),
) {
    into ret select ps.subject, s.name
    from    PostSubject as ps
			left join Subject as s on ps.subject = s.id
    where   ps.post = _post;
};


