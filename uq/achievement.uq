BOOK Achievement(
    key user ID [$user],
    postTotal int,
    postHit int 
);
 

 /** 搜索绩效*/
QUERY SearchAchievement(
    _user ID [$user]
)
returns ret  (
    postTotal int,
    postHit int 
) {
    into ret select a.postTotal, a.postHit
    from    Achievement as a
    where   a.user = _user;
};
 